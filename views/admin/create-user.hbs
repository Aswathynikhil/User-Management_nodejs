<section>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Create User</h2><br />
        <form action="/admin/create-user" method="post" id="createUserForm">
            <div class="form-group">
              <label for="">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="form-group">
              <label for="">Place</label>
              <input
                type="text"
                class="form-control"
                id="place"
                name="place"
                required
              />
            </div>
              <div class="form-group">
                <label for="">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  name="address"
                  required
                />
              </div>
              <div class="form-group">
                <label for="">PhoneNo</label>
                <input
                  type="tel"
                  class="form-control"
                  id="phone"
                  name="phone"
                  required
                />
              </div>
              <button type="submit" class="btn btn-dark mt-4">Submit</button> 
        </form>
      </div>
    </div>
  </div>
</section>

