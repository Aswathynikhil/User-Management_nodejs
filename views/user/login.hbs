<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5 ">
      <div class="login ">
      <h2 class="text-center">Login</h2>
      <form action="/login" method="post">

        <div class="form-group">
          <label for="">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            aria-describedby="emailHelp"
            placeholder="Enter email"
            {{!-- required --}}
          />
        </div>
        <div class="form-group">
          <label for="">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            {{!-- required --}}
          />
        </div><br>
         {{#if loginErr}}
         <p class="error" style="color: red;">{{loginErr}}</p>
         {{/if}}
        <button type="submit" class="btn btn-dark " style="width: 200px;">Login</button><br>
        <a href="admin/admin-login/">Admin Login</a><br>
         <a href="/signup">Create New Account?</a>
      </form>
      </div>
    </div>

  </div>
</div>
  